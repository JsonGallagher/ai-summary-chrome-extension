{
  "manifest_version": 3,
  "name": "Summarize Webpage",
  "version": "1.0",
  "description": "Submit current page content to OpenAI's ChatGPT API.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
